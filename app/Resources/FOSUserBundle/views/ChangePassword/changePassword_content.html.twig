{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'form_errors.html.twig' %}


<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">


    <div class="col-lg-12">
        <div class="form-group">
            <div>
                {{ form_label(form.current_password, 'Contraseña Actual') }}
            </div>

            <div>
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control input-sm','placeholder': 'Contraseña actual'} } ) }}
            </div>
            <div> {{ form_errors(form.current_password) }} </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="form-group">
            <div>
                {{ form_label(form.plainPassword.first, 'Nueva Contraseña') }}
            </div>
            <div>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-sm','placeholder': 'Nueva Contraseña'} } ) }}
            </div>
            <div> {{ form_errors(form.plainPassword.first) }} </div>

        </div>
    </div>


    <div class="col-lg-12">
        <div class="form-group">
            <div>
                {{ form_label(form.plainPassword.second, 'Confirmación') }}
            </div>
            <div>
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-sm','placeholder': 'Confirmación'} } ) }}
            </div>
            <div> {{ form_errors(form.plainPassword.second) }} </div>

        </div>
    </div>

    {{ form_rest(form) }}

    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <input type="submit" value="Cambiar contraseña" class="btn btn-primary"/>
            </div>
            <div class="col-lg-6">
                <a href="{{ path('fos_user_profile_show') }}" type="button"  class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    </div>

    {# <div>
        <input type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div> #}


</form>