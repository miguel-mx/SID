{% form_theme form 'form_errors.html.twig' %}

<form action="{{ path('fos_user_profile_edit') }}" method="POST" class="fos_user_profile_edit">

    <div class="form-group">
        <div>
            {{ form_label(form.username, 'Usuario') }}
        </div>

        <div>
            {{ form_widget(form.username, {'attr': {'class': 'form-control input-sm','placeholder': 'Nombre de usuario'} } ) }}
        </div>
        <div> {{ form_errors(form.username) }} </div>
    </div>

    <div class="form-group">
        <div>
            {{ form_label(form.email, 'E-mail') }}
        </div>

        <div>
            {{ form_widget(form.email, {'attr': {'class': 'form-control input-sm','placeholder': 'Nombre de usuario'} } ) }}
        </div>
        <div> {{ form_errors(form.email) }} </div>
    </div>

    <div class="form-group">
        <div>
            {{ form_label(form.current_password, 'Password') }}
        </div>

        <div>
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control input-sm','placeholder': 'Contrase√±a actual'} } ) }}
        </div>
        <div> {{ form_errors(form.current_password) }} </div>
    </div>



    <div class="row">
        <div class="col-lg-12">

            <button type="submit" class="btn btn-primary" >Actualizar</button>
            <a href="{{ path('fos_user_profile_show') }}" type="button"  class="btn btn-danger">Cancelar</a>


        </div>
    </div>

</form>


{{ form_rest(form) }}