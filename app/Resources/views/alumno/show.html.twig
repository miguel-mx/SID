{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="panel-body">
            <div class="page-header">
                <h1>{{ alumno.nombre}} {{ alumno.paterno}} {{ alumno.materno}} <small>- {{ alumno.correoInstitucional }}</small></h1>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>Información personal</strong></h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <table class="table">
                                <tr>
                                    <td><strong>País de origen</strong></td><td>{{ alumno.pais }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Universidad de procedencia</strong></td><td>{{ alumno.escuelaProcedencia }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Correo personal</strong></td><td>{{ alumno.correoPersonal }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Número de cuenta</strong></td><td>{{ alumno.numeroCuenta }}</td>
                                </tr>
                                <tr>
                                    <td><strong>CVU CONACyT</strong></td><td>{{ alumno.cvu }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for programa in alumno.programas %}
                <div class="col-md-6">
                    <h2>{{ programa.programa }} <small><a href="{{ path('programa_edit', { 'id': programa.id }) }}">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></small></h2>
                    <p>{{ programa.ingreso }} - {{ programa.termino }} <strong>Tutor </strong> <td><a href="{{ path('academico_show', { 'slug': programa.tutor.slug }) }}">{{ programa.tutor.paterno }} {{ programa.tutor.materno }} {{ programa.tutor.nombre }}</a></p>
                    <div class="page-header"><h3>Cursos</h3></div>
                    {% for curso in programa.cursos %}
                        <table class="table">
                            <tr>
                                <td><a href="{{ path('curso_show', { 'id': curso.id }) }}">{{ curso.curso }}</a></td>
                                <td><a href="{{ path('academico_show', { 'slug': curso.profesor.slug }) }}">{{ curso.profesor.paterno }} {{ curso.profesor.materno }} {{ curso.profesor.nombre }}</a></td>
                            </tr>
                        </table>
                    {% endfor %}
                </div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-md-6">
                        <a class="btn btn-success" href="{{ path('alumno_index') }}" role="button">
                            <i class="fa fa-list" aria-hidden="true"></i> Alumnos</a>
                        <a class="btn btn-primary" href="{{ path('programa_new', { 'slug': alumno.slug }) }}" role="button">
                            <i class="fa fa-plus" aria-hidden="true"></i> Crear programa</a>
                        <a class="btn btn-warning" href="{{ path('alumno_edit', { 'slug': alumno.slug }) }}" role="button">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Editar</a>
                </div>
            </div>
{#            <ul>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>#}
        </div>
    </div>
{% endblock %}
