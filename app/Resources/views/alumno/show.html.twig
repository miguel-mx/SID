{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="panel-body">
            <div class="page-header">
                <h1> Alumno {{ alumno.nombre}} {{ alumno.paterno}} {{ alumno.materno}}</h1>
            </div>

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Correo Personal</th>
                    <th>Correo Institucional</th>
                    <th>Escuela de procedencia</th>
                    <th>Programa</th>
                    <th>País</th>
                    <th>Numero de cuenta</th>
                    <th>Cvu</th>
                    <th>Createdat</th>
                    <th>Modifiedat</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ alumno.paterno }}</td>
                    <td>{{ alumno.materno }}</td>
                    <td>{{ alumno.nombre }}</td>
                    <td>{{ alumno.telefono }}</td>
                    <td>{{ alumno.correoPersonal }}</td>
                    <td>{{ alumno.correoInstitucional }}</td>
                    <td>{{ alumno.escuelaProcedencia }}</td>
                    <td>{{ alumno.pais }}</td>
                    <td>{{ alumno.numeroCuenta }}</td>
                    <td>{{ alumno.cvu }}</td>
                    <td>{% if alumno.createdAt %}{{ alumno.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if alumno.modifiedAt %}{{ alumno.modifiedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>

            <div class="row">
                {% for programa in alumno.programas %}
                <div class="col-md-6">
                    <h3>{{ programa.programa }}</h3>
                    <p>{{ programa.ingreso }} - {{ programa.termino }}</p>
                </div>
                {% endfor %}
            </div>

            <ul>
                <li>
                    <a href="{{ path('alumno_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('programa_new', { 'slug': alumno.slug }) }}">Crear programa</a>
                </li>
                <li>
                    <a href="{{ path('alumno_edit', { 'slug': alumno.slug }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
