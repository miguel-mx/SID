{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <section class="content-wrapper">
        <section class="content-header">
            <h1>Alumno</h1>
        </section>
        <section class="content">
            <div class="alert-danger">{{ form_errors(form) }}</div>
            <div class="box box-body">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3>Datos personales</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Nombre(s)</label>
                                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-dange">{{ form_errors(form.nombre) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Apellido Paterno</label>
                                        {{ form_widget(form.paterno, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.paterno) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Apellido Materno</label>
                                        {{ form_widget(form.materno, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.materno) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Teléfono</label>
                                        {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
                                        <span  data-inputmask='"mask": "(999) 999-9999"' data-mask="">{{ form_errors(form.telefono) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Correo Personal</label>
                                        {{ form_widget(form.correoPersonal, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.correoPersonal) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Correo Institucional</label>
                                        {{ form_widget(form.correoInstitucional, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.correoInstitucional) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>País</label>
                                        {{ form_widget(form.pais, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.pais) }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3> Datos académicos</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label>Escuela de procedencia</label>
                                        {{ form_widget(form.escuelaProcedencia, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.escuelaProcedencia) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Número de Cuenta</label>
                                        {{ form_widget(form.numeroCuenta, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.numeroCuenta) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>CVU</label>
                                        {{ form_widget(form.cvu, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.cvu) }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <input class="btn btn-primary btn-sm" type="submit" value="Crear Alumno">
            </div>
            {{ form_end(form) }}
          {#  <ul>
                <li>
                    <a href="{{ path('alumno_index') }}">Back to the list</a>
                </li>
            </ul>#}
        </section>
    </section>
{% endblock %}
