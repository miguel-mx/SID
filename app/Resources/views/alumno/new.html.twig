{% extends 'base.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <div class="panel-body">
            <div class="page-header">
                <h2>Nuevo Alumno</h2>
            </div>
            <div class="panel panel-info">
                <div class="panel-heading"><strong>Datos personales</strong></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Nombre</label>
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.nombre) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Apellido Paterno</label>
                            {{ form_widget(form.paterno, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.paterno) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Apellido Materno</label>
                            {{ form_widget(form.materno, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.materno) }}</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Teléfono</label>
                            {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.telefono) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Correo</label>
                            {{ form_widget(form.correo, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.correo) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>País</label>
                            {{ form_widget(form.pais, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.pais) }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="panel panel-info">
                <div class="panel-heading"><strong>Datos académicos </strong></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Escuela de procedencia</label>
                            {{ form_widget(form.escuelaProcedencia, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.escuelaProcedencia) }}</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Programa</label>
                            {{ form_widget(form.programa, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.programa) }}</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Numero de Cuenta</label>
                            {{ form_widget(form.numeroCuenta, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.numeroCuenta) }}</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>CVU</label>
                            {{ form_widget(form.cvu, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.cvu) }}</span>
                        </div>
                    </div>
                </div>
            </div>


        {{ form_start(form) }}
              {{ form_widget(form) }}
              <input class="btn btn-primary" type="submit" value="Crear" />
           {{ form_end(form) }}

        </div>

            <ul>
                <li>
                    <a href="{{ path('alumno_index') }}">Back to the list</a>
                </li>
            </ul>



    </div>
{% endblock %}
