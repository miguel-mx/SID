{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jqc-1.12.4/dt-1.10.13/b-1.2.4/datatables.min.css"/>
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="panel-body">
            <div class="page-header">
                <h1> Lista de Alumnos </h1>
            </div>

            <div class="row">
                <div class="col col-md-2">
                    <div class="metric-container">
                        <h3 class="metric-header">{{ alumnos_maestria|length + alumnos_doctorado|length }}</h3>
                        <span class="metric-label">Alumnos</span>
                    </div>
                </div>
            </div>

            <div class="page-header"><h2>Doctorado <span class="badge">{{ alumnos_doctorado|length }}</span></h2></div>
            <table class="table table-bordered" id="alumno_table">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo Institucional</th>
                    <th>País</th>
                    <th>Numero de cuenta</th>
                </tr>
                </thead>
                <tbody>
                {% for alumno in alumnos_doctorado %}
                    <tr>
                        {#<td><a href="{{ path('alumno', { 'slug': alumno.slug }) }}">{{ alumno.id }}</a></td>#}
                        <td><a href="{{ path('alumno_show', { 'slug': alumno.slug }) }}">{{ alumno.paterno }} {{ alumno.materno }} {{ alumno.nombre }}</a></td>
                        <td>{{ alumno.correoInstitucional }}</td>
                        <td class="text-center">{{ alumno.pais }}</td>
                        <td class="text-center">{{ alumno.numeroCuenta }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="page-header"><h2>Maestría <span class="badge">{{ alumnos_maestria|length }}</span></h2></div>
            <table class="table table-bordered" id="alumno_table">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo Institucional</th>
                    <th>País</th>
                    <th>Numero de cuenta</th>
                </tr>
                </thead>
                <tbody>
                {% for alumno in alumnos_maestria %}
                    <tr>
                        {#<td><a href="{{ path('alumno', { 'slug': alumno.slug }) }}">{{ alumno.id }}</a></td>#}
                        <td><a href="{{ path('alumno_show', { 'slug': alumno.slug }) }}">{{ alumno.paterno }} {{ alumno.materno }} {{ alumno.nombre }}</a></td>
                        <td>{{ alumno.correoInstitucional }}</td>
                        <td class="text-center">{{ alumno.pais }}</td>
                        <td class="text-center">{{ alumno.numeroCuenta }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


            <ul>
                <li>
                    <a href="{{ path('alumno_new') }}">Create a new alumno</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/jqc-1.12.4/dt-1.10.13/b-1.2.4/datatables.min.js"></script>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $('#solicitud_table').DataTable( {
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel', 'pdf'
                ]
            } );
        } );
    </script>

{% endblock %}