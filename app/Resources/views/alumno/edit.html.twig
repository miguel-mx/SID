{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="panel-body">
            <h1>Editar Alumno</h1>

            {{ form_start(edit_form) }}
            <div class="alert-danger">{{ form_errors(edit_form) }}</div>
            <div class="panel panel-info">
                <div class="panel-heading"><strong>Datos personales</strong></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Nombre</label>
                            {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.nombre) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Apellido Paterno</label>
                            {{ form_widget(edit_form.paterno, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.paterno) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Apellido Materno</label>
                            {{ form_widget(edit_form.materno, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.materno) }}</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Teléfono</label>
                            {{ form_widget(edit_form.telefono, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.telefono) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Correo Personal</label>
                            {{ form_widget(edit_form.correoPersonal, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.correoPersonal) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Correo Institucional</label>
                            {{ form_widget(edit_form.correoInstitucional, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.correoInstitucional) }}</span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>País</label>
                            {{ form_widget(edit_form.pais, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.pais) }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="panel panel-info">
                <div class="panel-heading"><strong>Datos académicos </strong></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Escuela de procedencia</label>
                            {{ form_widget(edit_form.escuelaProcedencia, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.escuelaProcedencia) }}</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Numero de Cuenta</label>
                            {{ form_widget(edit_form.numeroCuenta, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.numeroCuenta) }}</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>CVU</label>
                            {{ form_widget(edit_form.cvu, {'attr': {'class': 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(edit_form.cvu) }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    {{ form_widget(edit_form.condicionado) }}
                                    <strong>Condicionado</strong>
                                </label>
                            </div>
                            <span class="text-danger">{{ form_errors(edit_form.condicionado) }}</span>
                        </div>
                    </div>
                </div>

                {{ form_widget(edit_form) }}
                <input type="submit" value="Editar" />
                {{ form_end(edit_form) }}
            </div>
            <ul>
                <li>
                    <a href="{{ path('alumno_index') }}">Back to the list</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
