{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="content-wrapper">
        <section class="content-header">
            <h2>Curso</h2>
        </section>
        <div class="content">
            <div class="alert-danger">{{ form_errors(form) }}</div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="box-header">
                            <h3>Datos del curso </h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tipo</label>
                                        {{ form_widget(form.tipo, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.tipo) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Asignatura</label>
                                        {{ form_widget(form.asignatura, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.asignatura) }}</span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Tema</label>
                                        {{ form_widget(form.tema, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.tema) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Curso</label>
                                        {{ form_widget(form.curso, {'attr': {'class': 'form-control'}}) }}
                                        <span>{{ form_errors(form.curso) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Creditos</label>
                                        {{ form_widget(form.creditos, {'attr': {'class': 'form-control'}}) }}
                                        <span>{{ form_errors(form.creditos) }}</span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Semestre</label>
                                        {{ form_widget(form.semestre, {'attr': {'class': 'form-control'}}) }}
                                        <span>{{ form_errors(form.semestre) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>clave de grupo</label>
                                        {{ form_widget(form.claveGrupo, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.claveGrupo) }}</span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Horas por semana</label>
                                        {{ form_widget(form.horasSemana, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.horasSemana) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Lugar</label>
                                        {{ form_widget(form.lugar, {'attr': {'class': 'form-control'}}) }}
                                        <span>{{ form_errors(form.lugar) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Profesor</label>
                                        {{ form_widget(form.profesor, {'attr': {'class': 'form-control'}}) }}
                                        <span>{{ form_errors(form.profesor) }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <input class="btn btn-primary btn-sm" type="submit" value="Crear">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
