{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Curso</h1>
        </section>
        <section class="content">
            <div class="page-header">
                <h1> Curso </h1>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <table class="table table-bordered">

                        <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Curso</th>
                            <th>Tema</th>
                            <th>Horas por semana</th>
                            <th>Cr√©ditos</th>
                            <th>Asignatura</th>
                            <th>Clave de grupo</th>
                            <th>Lugar</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ curso.tipo }}</td>
                            <td>{{ curso.curso }}</td>
                            <td>{{ curso.tema }}</td>
                            <td>{{ curso.horasSemana }}</td>
                            <td>{{ curso.creditos }}</td>
                            <td>{{ curso.asignatura }}</td>
                            <td>{{ curso.claveGrupo }}</td>
                            <td>{{ curso.lugar }}</td>
                        </tr>
                        </tbody>
                    </table>

                    {% for alumno in curso.alumnos %}
                        <p><h4><a href="{{ path('alumno_show', { 'slug': alumno.slug }) }}">{{ alumno.paterno }} {{ alumno.materno }} {{ alumno.nombre }}</h4></a></p>
                    {% endfor %}

                </div>
            </div>

            <ul>
                <li>
                    <a href="{{ path('curso_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('curso_edit', { 'id': curso.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </section>
    </div>
{% endblock %}
