{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="panel-body">
            <div class="page-header">
                <h1> Curso </h1>
            </div>



            <table class="table table-bordered">

                <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Curso</th>
                    <th>Tema</th>
                    <th>Horas por semana</th>
                    <th>Cr√©ditos</th>
                    <th>Asignatura</th>
                    <th>Clave de grupo</th>
