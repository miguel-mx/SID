{% extends 'base.html.twig' %}

{% block css %}

    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.6/select2-bootstrap.css" rel="stylesheet" />

{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="content-wrapper">
        <section class="content-header">
            <h2>Crear Nuevo examen general</h2>
        </section>
        <div class="content">
            <div class="alert-danger">{{ form_errors(form) }}</div>
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
            <div class="box box-primary">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Examen</label>
                                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.nombre) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Lugar</label>
                                        {{ form_widget(form.lugar, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.lugar) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Fecha</label>
                                        <div class="input-group date">
                                            {{ form_widget(form.fecha, {'attr': {'class': 'form-control js-datepicker'}}) }}
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                        <span class="text-danger">{{ form_errors(form.fecha) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Hora</label>
                                        <div class="input-group date">
                                            {{ form_widget(form.hora) }}
                                        </div>
                                        <span class="text-danger">{{ form_errors(form.hora) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Semestre</label>
                                        {{ form_widget(form.semestre, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.semestre) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Coordinador</label>
                                        {{ form_widget(form.coordinador, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.coordinador) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Comit√© </label>
                                        {{ form_widget(form.comite, {'attr': {'class': 'form-control comite-multiple', 'multiple': 'multiple'}}) }}
                                        <span class="text-danger">{{ form_errors(form.comite) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                            </div>





                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <a href="{{ path('alumno_index') }}"> <input class="btn btn-primary btn-sm" type="submit" value="Crear"></a>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datepicker.es.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>


    <script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd',
                language: 'es',
                orientation: "auto bottom"
            });
        });
    </script>
    <script>
        $(document).ready(function() {
            $('.js-datepicker2').datepicker({
                format: 'yyyy-MM-dd',
                orientation: "auto bottom"
            });
        });
    </script>

    <script type="text/javascript">
        $(".semestres-multiple").select2({
            theme: "bootstrap"
        });
    </script>

    <script type="text/javascript">
        $(".comite-multiple").select2({
            theme: "bootstrap"
        });
    </script>

{% endblock %}