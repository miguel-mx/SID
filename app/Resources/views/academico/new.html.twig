{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <section class="content-wrapper">
        <section class="content-header">
            <h2>Profesor</h2>
        </section>
        <section class="content">
            <div class="alert-danger">{{ form_errors(form) }}</div>
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3>Datos personales</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Nombre</label>
                                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.nombre) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Apellido Paterno</label>
                                        {{ form_widget(form.paterno, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.paterno) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Apellido Materno</label>
                                        {{ form_widget(form.materno, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.materno) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>RFC</label>
                                        {{ form_widget(form.rfc, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.rfc) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>CURP</label>
                                        {{ form_widget(form.curp, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.curp) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Correo</label>
                                        {{ form_widget(form.correo, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.correo) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Página web</label>
                                        {{ form_widget(form.pagina, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.pagina) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Resumen</label>
                                        {{ form_widget(form.resumen, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.resumen) }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3> Datos académicos</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Adscripción</label>
                                        {{ form_widget(form.adscripcion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.adscripcion) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Acreditación</label>
                                        {{ form_widget(form.acreditacion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.acreditacion) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>CVU</label>
                                        {{ form_widget(form.cvu, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.cvu) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Teléfono</label>
                                        {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.telefono) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Extensión</label>
                                        {{ form_widget(form.extension, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.extension) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Ubicación</label>
                                        {{ form_widget(form.ubicacion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.ubicacion) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Núcleo básico</label>
                                        {{ form_widget(form.basico)}}
                                        <span class="text-danger">{{ form_errors(form.basico) }}</span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Área de Investigación</label>
                                        {{ form_widget(form.areaInvestigacion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(form.areaInvestigacion) }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <input class="btn btn-primary btn-sm" type="submit" value="Crear">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </div>
        {{ form_end(form) }}

