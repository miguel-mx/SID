             <li>
                 <a href="{{ path('academico_index') }}">Back to the list</a>
             </li>
             <li>
                 {{ form_start(delete_form) }}
                 <input type="submit" value="Delete">
                 {{ form_end(delete_form) }}
             </li>
         </ul>#}
    </div>
{% endblock %}
