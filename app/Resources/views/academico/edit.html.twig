{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h2>Profesor</h2>
        </section>
        {{ form_start(edit_form) }}
        <section class="content">
            <div class="alert-danger">{{ form_errors(edit_form) }}</div>
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            {% for flash_message in app.session.flashBag.get('notice') %}
                                <div class="alert alert-success">
                                    {{ flash_message }}
                                </div>
                            {% endfor %}
                            <h3>Datos personales</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Nombre</label>
                                        {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.nombre) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Apellido Paterno</label>
                                        {{ form_widget(edit_form.paterno, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.paterno) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Apellido Materno</label>
                                        {{ form_widget(edit_form.materno, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.materno) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>RFC</label>
                                        {{ form_widget(edit_form.rfc, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.rfc) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>CURP</label>
                                        {{ form_widget(edit_form.curp, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.curp) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Correo</label>
                                        {{ form_widget(edit_form.correo, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.correo) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Página web</label>
                                        {{ form_widget(edit_form.pagina, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.pagina) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Resumen</label>
                                        {{ form_widget(edit_form.resumen, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.resumen) }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3> Datos académicos</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Adscripción</label>
                                        {{ form_widget(edit_form.adscripcion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.adscripcion) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Acreditación</label>
                                        {{ form_widget(edit_form.acreditacion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.acreditacion) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>CVU</label>
                                        {{ form_widget(edit_form.cvu, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.cvu) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Teléfono</label>
                                        {{ form_widget(edit_form.telefono, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.telefono) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Extensión</label>
                                        {{ form_widget(edit_form.extension, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.extension) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Ubicación</label>
                                        {{ form_widget(edit_form.ubicacion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.ubicacion) }}</span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Área de Investigación</label>
                                        {{ form_widget(edit_form.areaInvestigacion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.areaInvestigacion) }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <input class="btn btn-primary btn-sm" type="submit" value="Guardar cambios">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {{ form_end(edit_form) }}
