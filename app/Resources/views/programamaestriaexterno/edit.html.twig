{% extends 'base.html.twig' %}

{% block css %}

    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.6/select2-bootstrap.css" rel="stylesheet" />

{% endblock %}

{% block body %}
    {{ form_start(edit_form) }}

    <div class="content-wrapper">
        <section class="content-header">

        </section>
        <div class="content">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="box box-primary">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Escuela de procedencia</label>
                                        {{ form_widget(edit_form.escuelaProcedencia, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.escuelaProcedencia) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>País</label>
                                        {{ form_widget(edit_form.pais, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.pais) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ciudad</label>
                                        {{ form_widget(edit_form.ciudad, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.ciudad) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Fecha de Grado </label>
                                        <div class="input-group date">
                                            {{ form_widget(edit_form.fechaGrado, {'attr': {'class': 'form-control js-datepicker'}}) }}
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                        <span class="text-danger">{{ form_errors(edit_form.fechaGrado) }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Opción de titulación</label>
                                        {{ form_widget(edit_form.opcionTitulacion, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.opcionTitulacion) }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Título de Tésis</label>
                                        {{ form_widget(edit_form.tituloTesis, {'attr': {'class': 'form-control'}}) }}
                                        <span class="text-danger">{{ form_errors(edit_form.tituloTesis) }}</span>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                {{ form_widget(form) }}
                <input  class="btn btn-success btn-sm" type="submit" value="Guardar cambios">
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datepicker.es.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script src=""></script>

    <script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd',
                language: 'es',
                orientation: "auto bottom"
            });
        });
    </script>


{% endblock %}