{% extends 'base.html.twig' %}

{% block body %}

<div class="content-wrapper">
    <div class="panel-body">
        <div class="page-header">
            <h2>Nuevo Semestre</h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>semestre</label>
                    {{ form_widget(form.semestre, {'attr': {'class': 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.semestre) }}</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Fecha de inicio</label>
                    {{ form_widget(form.fechaInicio, {'attr': {'class': 'form-control'}}) }}
                    <span>{{ form_errors(form.fechaInicio) }}</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Fecha de terminacion</label>
                    {{ form_widget(form.fechaFin, {'attr': {'class': 'form-control'}}) }}
                    <span class="text-danger">{{ form_errors(form.fechaFin) }}</span>
                </div>
            </div>
        </div>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
        {{ form_end(form) }}

        <ul>
            <li>
                <a href="{{ path('semestre_index') }}">Back to the list</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
