{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="panel-body">
            <div class="page-header">
                <h1>{{ semestre.semestre }}</h1>
            </div>
            <p>Fecha de inicio: {{ semestre.fechaInicio|date('d-m-Y') }}</p>
            <p>Fecha de término: {{ semestre.fechaFin|date('d-m-Y') }}</p>

            <table class="table">
                <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Curso</th>
                    <th>Tema</th>
                    <th>Horas por semana</th>
                    <th>Créditos</th>
                    <th>Asignatura</th>
                    <th>Clave de grupo</th>
                    <th>Lugar</th>
                </tr>
                </thead>
                {% for curso in semestre.cursos %}

                    <tbody>
                    <tr>
                        <td>{{ curso.tipo }}</td>
                        <td><a href="{{ path('curso_show', { 'id': curso.id }) }}">{{ curso.curso }}</td>
                        <td>{{ curso.tema }}</td>
                        <td>{{ curso.horasSemana }}</td>
                        <td>{{ curso.creditos }}</td>
                        <td>{{ curso.asignatura }}</td>
                        <td>{{ curso.claveGrupo }}</td>
                        <td>{{ curso.lugar }}</td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>

            <ul>
                <li>
                    <a href="{{ path('semestre_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('semestre_edit', { 'slug': semestre.slug }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
