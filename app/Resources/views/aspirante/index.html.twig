{% extends 'base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.css') }}">

{% endblock %}

{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <h1>Aspirantes </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-aqua-active">
                        <i class="fa fa-users" aria-hidden="true"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">Aspirantes</span>
                        <span class="info-box-number">
                                <h2>{{ aspirantes|length  }}</h2>
                            </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3>Aspirantes a Doctorado <span class="badge bg-aqua-active"> {{ aspirantes_doctorado|length  }}</span></h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered" id="doctorado_table">
                            <tbody>
                            {% for aspirante in aspirantes_doctorado %}
                                <tr>
                                    <td><a href="{{ path('aspirante_show', { 'slug': aspirante.slug }) }}">{{ aspirante.paterno }} {{ aspirante.materno }} {{ aspirante.nombre }}</a></td>
                                    <td>{{ aspirante.correoPersonal }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="box-footer">
                            <a class="btn btn-primary btn-sm" href="{{ path('aspirante_new') }}"><i class="fa fa-plus" aria-hidden="true"></i> Agregar aspirante</a>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3>Aspirantes a MaestrÃ­a <span class="badge bg-aqua-active"> {{ aspirantes_maestria|length  }}</span></h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered" id="doctorado_table">
                            <tbody>
                            {% for aspirante in aspirantes_maestria %}
                                <tr>
                                    <td><a href="{{ path('aspirante_show', { 'slug': aspirante.slug }) }}">{{ aspirante.paterno }} {{ aspirante.materno }} {{ aspirante.nombre }}</a></td>
                                    <td>{{ aspirante.correoPersonal }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </section>



</div>
{% endblock %}

{% block semestre %}
    <li class="treeview active">
        <a href="#">
            <span> {{ _semestre }}</span>
        </a>
        <ul class="treeview-menu menu-open" style="display: none;">
            {% for semestre_li in semestres_lista %}
                <li class=""><a href="{{ path('aspirante_index', { 'semestre': semestre_li.semestre }) }}">{{ semestre_li.semestre }}</a></li>
            {% endfor %}
        </ul>
    </li>
{% endblock %}

{% block javascripts %}

    {{ parent() }}




{% endblock %}
